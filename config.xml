<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.clazzmanager" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ClazzManager</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
    <platform name="android">
        you can use any density that exists in the Android project 
        <splash src="www/img/H_HDPI.png" density="land-hdpi"/>
        <splash src="www/img/H_LDPI.png" density="land-ldpi"/>
        <splash src="www/img/H_MDPI.png" density="land-mdpi"/>
        <splash src="www/img/H_XHDPI.png" density="land-xhdpi"/>

        <splash src="www/img/V_HDPI.png" density="port-hdpi"/>
        <splash src="www/img/V_LDPI.png" density="port-ldpi"/>
        <splash src="www/img/V_MDPI.png" density="port-mdpi"/>
        <splash src="www/img/V_XHDPI.png" density="port-xhdpi"/>
    </platform>
    
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <!--<preference name="AutoHideSplashScreen" value="true" />-->
    
    <platform name="android">
        <icon src="www/img/icone128.png" density="ldpi" />
        <icon src="www/img/icone128.png" density="mdpi" />
        <icon src="www/img/icone128.png" density="hdpi" />
        <icon src="www/img/icone128.png" density="xhdpi" />
        
    </platform>

    
    <icon src="www/img/icone128.png" />

    
    <content src="index.html" />
    <access origin="*" />
</widget>
